{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Live Server (Python)",
      "type": "shell",
      "command": "python",
      "args": ["-m", "http.server", "5500"],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Serving HTTP",
          "endsPattern": "Keyboard interrupt received"
        }
      }
    }
  ]
}
